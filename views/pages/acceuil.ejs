<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    <% include('partials/head') %>
</head>
<body class="bg-dark text-light">
<% include('partials/header') %>
<div class="container mt-5">
    <h1>Bonjour <%= locals.username %></h1>
    <p class="lead">Page d'accueil</p>
    <form action="/form" method="post">
        <% posts.forEach(post => { %>
            <div class="card mb-3 bg-secondary">
                <div class="card-body">
                    <h5 class="card-title"><%= post.theme %></h5>
                    <p class="card-text"><%= post.content %></p>
                    <a href="/formanswers/<%= post.id %>" class="btn btn-primary mb-3">Rajouter une r√©ponse</a>
                    <div class="form-check">
                        <% answers.forEach(answer => { %>
                            <% if (post.id == answer.question_id) { %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="answer" id="answer_<%= answer.id %>" value="<%= answer.id %>">
                                    <label class="form-check-label" for="answer_<%= answer.id %>"><%= answer.content %></label>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
        <% }) %>
        <button type="submit" class="btn btn-primary mb-3">Valider</button>
    </form>
</div>

<% include('partials/scripts') %>
</body>
</html>
